# Environment Configuration for HeliosOS
# Copy this file to .env and fill in your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# Database Configuration
DATABASE_URL=postgresql://sydney:password123@localhost:5432/helios_db

# AI Service Configuration
# Get your API key from https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# AI Models
SUMMARY_MODEL=facebook/bart-large-cnn
CHAT_MODEL=microsoft/DialoGPT-medium

# Rate Limiting Storage
# For production, use Redis: redis://localhost:6379/0
# For development, memory:// is acceptable
RATE_LIMIT_STORAGE_URL=memory://

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=helios.log

# Command Execution
COMMAND_TIMEOUT=10
MAX_COMMAND_OUTPUT=10000